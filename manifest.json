{
  "manifest_version": 2,

  "name": "Pundit Panel Plugin",
  "description": "This extension will show tweets from pundits in the area of expertise of news articles",
  "version": "1.0",
  "content_security_policy": "script-src 'self' https://platform.twitter.com https://cdn.syndication.twimg.com; object-src 'self'", 
  "content_scripts" : [
    {
      "matches": ["https://platform.twitter.com/widgets.js"],
      "css": ["/style.css"],
      "js": ["/popup.js"]
    }
  ],
  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
   ]
}